---
import { SEO } from "astro-seo";
import "../styles/globals.css";

export interface Props {
	title: string;
	description: string;
	image?: string;
}

const { title, description, image = "/favicon.ico" } = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta
			name="keywords"
			content="Naufal Ananta, Fullstack Developer Purwokerto, Web Developer Indonesia, Software Engineer Purwokerto, Portofolio Developer Web"
		/>
		<meta name="author" content="Naufal Ananta" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />

		<SEO
			title={title}
			description={description}
			canonical="https://naufalananta.dnn.web.id"
			openGraph={{
				basic: {
					title: title,
					type: "website",
					image: image,
					url: Astro.url.href,
				},
			}}
			twitter={{
				card: "summary_large_image",
				creator: "@massnaufall",
			}}
		/>

		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Naufal Ananta",
				"jobTitle": "Fullstack Developer",
				"image": "[URL_FOTO_PROFIL_ANDA.jpg]",
				"email": "mailto:[EMAIL_ANDA@example.com]",
				"address": {
					"@type": "PostalAddress",
					"addressLocality": "Purwokerto",
					"addressRegion": "Central Java",
					"addressCountry": "ID"
				},
				"url": "https://naufalananta.dnn.web.id",
				"sameAs": [
					"https://github.com/NaufalAnantaSE",
					"https://linkedin.com/in/naufalananta",
					"https://www.linkedin.com/in/naufalananta/",
					"https://www.instagram.com/1nonlynaufal/"
				],
				"knowsAbout": [
					"React",
					"Astro",
					"TypeScript",
					"JavaScript",
					"Tailwind CSS",
					"Node.js"
				]
			}
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
