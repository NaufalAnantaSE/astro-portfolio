---
import { SEO } from "astro-seo";
import "../styles/globals.css";

export interface Props {
	title: string;
	description: string;
	image?: string; // optional, do not default
	keywords?: string[]; // optional, from API
}

const { title, description, image, keywords } = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		{keywords && keywords.length > 0 && (
			<meta name="keywords" content={keywords.join(', ')} />
		)}
		<meta name="author" content="Naufal Ananta" />
		{image && (<link rel="icon" type="image/x-icon" href={image} />)}
		<link rel="canonical" href="https://naufalananta.dnn.web.id/" />
		<meta name="generator" content={Astro.generator} />
		<!-- Open Graph & Twitter handled by <SEO> below -->

		{image ? (
			<SEO
				title="Portfolio Naufal Ananta"
				description={description}
				canonical="https://naufalananta.dnn.web.id"
				openGraph={{
					basic: {
						title: "Portfolio Naufal Ananta",
						type: "website",
						image: image,
						url: Astro.url.href,
					},
				}}
				twitter={{
					card: "summary_large_image",
					creator: "@massnaufall",
				}}
			/>
		) : (
			<SEO
				title="Portfolio Naufal Ananta"
				description={description}
				canonical="https://naufalananta.dnn.web.id"
				twitter={{
					card: "summary_large_image",
					creator: "@massnaufall",
				}}
			/>
		)}

		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Naufal Ananta",
				"jobTitle": "Fullstack Developer",
				"image": "[URL_FOTO_PROFIL_ANDA.jpg]",
				"email": "mailto:anantanaufal@gmail.com",
				"address": {
					"@type": "PostalAddress",
					"addressLocality": "Purwokerto",
					"addressRegion": "Central Java",
					"addressCountry": "ID"
				},
				"url": "https://naufalananta.dnn.web.id",
				"sameAs": [
					"https://github.com/NaufalAnantaSE",
					"https://linkedin.com/in/naufalananta",
					"https://www.linkedin.com/in/naufalananta/",
					"https://www.instagram.com/1nonlynaufal/"
				],
				"knowsAbout": [
					"React",
					"Astro",
					"TypeScript",
					"JavaScript",
					"Tailwind CSS",
					"Node.js"
				]
			}
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
